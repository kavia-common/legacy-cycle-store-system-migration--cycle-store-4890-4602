{
  "name": "test-automation-service",
  "version": "1.0.0",
  "description": "Express-based Test Automation Service orchestrating Selenium tests with CI/CD integrations and secured APIs",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "lint": "eslint .",
    "generate:openapi": "node generate_openapi.js"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "cors": "2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-schedule": "^2.1.1",
    "selenium-webdriver": "^4.23.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ignore": [
      "node_modules",
      "package.json",
      "package-lock.json",
      "*.lock",
      "*.log",
      "*.md",
      ".git",
      "dist",
      "build"
    ],
    "ext": "js,json"
  }
}
